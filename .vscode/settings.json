{
	"files.exclude": {
		"**/node_modules": true
	},
	"typescript.validate.enable": true,
	"typescript.validate.enableProjectDiagnostics": true,
	"typescript.tsserver.watchOptions": {
		"excludeDirectories": [ "**/node_modules" ]
